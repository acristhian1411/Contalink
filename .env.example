APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=
# DB_SSLMODE=prefer

SESSION_DRIVER=database
SESSION_LIFETIME=60
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# Session Cookie Security Settings
# IMPORTANT: For local development over HTTP, set SESSION_SECURE_COOKIE=false
# This allows session cookies to work properly without HTTPS
# PRODUCTION: Always set SESSION_SECURE_COOKIE=true when using HTTPS
SESSION_SECURE_COOKIE=false

SESSION_HTTP_ONLY=true

# SESSION_SAME_SITE controls cookie cross-site behavior
# 'lax' allows cookies on top-level navigation (recommended for most apps)
# 'strict' blocks all cross-site cookies (more secure but may break some flows)
# PRODUCTION: Use 'lax' for better compatibility, or 'strict' for maximum security
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000
SANCTUM_EXPIRATION=60
SANCTUM_TOKEN_PREFIX=contalink_

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:8000,http://localhost:8000

# Production Security Settings
# Set APP_DEBUG=false in production
# Set DB_SSLMODE=require for production database connections
# Set FORCE_HTTPS=true in production
# Set HSTS_ENABLED=true in production

# Security Logging Configuration
LOG_SECURITY_LEVEL=warning
LOG_SECURITY_DAYS=90
LOG_AUDIT_LEVEL=info
LOG_AUDIT_DAYS=365
LOG_AUTH_LEVEL=info
LOG_AUTH_DAYS=30

# Rate Limiting Configuration
THROTTLE_API_REQUESTS=60
THROTTLE_AUTH_REQUESTS=5

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
CSP_REPORTING_ENABLED=true

# Production CORS Configuration (restrict to your actual domains)
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
